<div class="modal fade" tabindex="-1" id="connectionsModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Connector Credentials</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-success alert-dismissible fade show" role="alert" id="savedSuccessfully">
                    <span>Connection saved!</span>
                </div>
                <div class="alert alert-danger alert-dismissible fade show" role="alert" id="failedToSave" hidden>
                    <span>Connection couldn't be saved!</span>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
                {% include 'connection_modal/addConnectionForm.twig' %}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>